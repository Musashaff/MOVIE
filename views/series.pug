html 
    head 
        title TV Series Page
        link(rel="stylesheet", href="./output.css")
        body(class="max-w-4xl mx-auto p-4 bg-black")
            h1(class="mt-16 text-5xl font-bold text-amber-700") Series
            div(class="mt-8 grid md:grid-cols-4 gap-4")
                each series in data
                    a(href=`/series/${series.id}`) 
                        img(src=`https://image.tmdb.org/t/p/w500${series.poster_path}`, alt="")
                        h2(class="text-lg text-white")= series.title
                        p(class="text-amber-700")= series.vote_average