html 
    head 
        title Moviespage 
        link(rel="stylesheet", href="./output.css")
        body(class="max-w-4xl mx-auto p-4 bg-black")
            h1(class="mt-16 text-5xl font-bold text-amber-700") Movies 
            div(class="mt-8 grid md:grid-cols-4 gap-4 ")
                each movie in data
                    a(href=`/movies/${movie.id}`) 
                        img(src=`https://image.tmdb.org/t/p/w500${movie.poster_path}`, alt="")
                        h2(class="text-lg text-white")= movie.title
                        p(class="text-amber-700")= movie.vote_average


            